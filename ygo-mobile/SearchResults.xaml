<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ygo_mobile.search_results"
             Title="search_results">

    <ContentPage.Resources>
        <ResourceDictionary>
            
            <Style TargetType="CollectionView" x:Key="layout_grid">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="IsVisible" Value="Collapse"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="IsVisible" Value="Visible"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <Style TargetType="CollectionView" x:Key="layout_single">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="IsVisible" Value="Visible"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="IsVisible" Value="Collapse"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout>
        
        <!--NAVIGATION/HEADER-->

            <CollectionView x:Name="view_TEST" Style="{StaticResource layout_single}">
            
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="1"/>
            </CollectionView.ItemsLayout>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>

                        <Grid ColumnDefinitions="2*, 1*, 1*, 1*" RowDefinitions="*, *" Padding="0, 0, 80,0 ">
                            <!--CARD IMAGE-->
                            <Image Grid.Column="0" Grid.RowSpan="2" Source="placeholder_card.png" HeightRequest="132" WidthRequest="104" Margin="3"/>
                            <!--CARD NAME-->
                            <Label Grid.Column="1" Grid.ColumnSpan="2" Text="[CARD NAME]"/>

                            <Image Grid.Column="1" Grid.Row="1" Source="placeholder_level.png" HeightRequest="80" WidthRequest="50"/>
                            <Label Grid.Column="1" Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Text="12"/>
                            <Image Grid.Column="2" Grid.Row="1" Source="placeholder_attribute.png" HeightRequest="80" WidthRequest="50"/>
                            <Image Grid.Column="3" Grid.Row="1" Source="placeholder_type.png" HeightRequest="80" WidthRequest="50"/>
                        </Grid>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

            <CollectionView x:Name="view_TEST_grid" Style="{StaticResource layout_grid}">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            
                            <!--CARD IMAGE-->
                            <Image Source="placeholder_card.png" HeightRequest="132" WidthRequest="104" Margin="3"/>

                            <VerticalStackLayout>
                                <!--CARD NAME-->
                                <Label Text="[CARD NAME]"/>
                                <Grid ColumnDefinitions="*, *, *, *" ColumnSpacing="3">
                                    <!--RANK/LEVEL || ATTR. || TYPE-->
                                    <Image Grid.Column="0" Source="placeholder_level.png" HeightRequest="50" WidthRequest="50"/>
                                    <Label Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" Text="12"/>
                                    <Image Grid.Column="1" Source="placeholder_attribute.png" HeightRequest="50" WidthRequest="50"/>
                                    <Image Grid.Column="3" Source="placeholder_type.png" HeightRequest="50" WidthRequest="50"/>
                                </Grid>
                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
    
    
</ContentPage>
 