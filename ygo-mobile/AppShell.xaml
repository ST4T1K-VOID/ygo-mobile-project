<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ygo_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ygo_mobile"
    Shell.FlyoutBehavior="Flyout"
    Title="ygo_mobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"
    />
    <ShellContent
        Title="Card-Details"
        ContentTemplate="{DataTemplate local:cardDetails}"
        Route="card-details"
    />
    <ShellContent
        Title="search-resutls"
        ContentTemplate="{DataTemplate local:SearchResults}"
        Route="search-results"
    />
    <ShellContent
        Title="advanced_searchpage"
        ContentTemplate="{DataTemplate local:AdvancedSearchpage}"
        Route="advanced-searchpage"
    />
</Shell>
